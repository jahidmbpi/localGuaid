

model Listing {
  id           String     @id @default(uuid())
  title        String
  description  String
  itinerary    String?
  city         String
  category     String
  price        Float
  duration     Int         
  meetingPoint String
  maxGroupSize Int
  images       String[]
  isActive     Boolean     @default(true)
  bookings     Booking[]
  guideId      String
  guide User @relation(fields: [guideId],references: [id])
  bookingCount Int @default(0)


  
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  @@map("listing")
}
